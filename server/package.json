{
  "name": "ssmc-acs-dashboard",
  "version": "1.0.0",
  "description": "Backend for SSMC ACS Dashboard",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:exe": "pkg . --targets node18-win-x64 --output acs-dashboard.exe"
  },
  "pkg": {
    "assets": [
      "views/**/*",
      "public/**/*",
      "node_modules/better-sqlite3/build/Release/*.node"
    ],
    "targets": [
      "node20-win-x64"
    ],
    "outputPath": "../dist_exe"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "9.6.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mssql": "^10.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  }
}
